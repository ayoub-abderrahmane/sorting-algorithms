import matplotlib.pyplot as plt
import numpy as np

# Nombre de couleurs
num_colors = 360

# Générer les couleurs mélangées
colors = []
for i in range(num_colors):
    r = np.sin(2 * np.pi * i / num_colors) * 0.5 + 0.5
    g = np.sin(2 * np.pi * (i / num_colors + 1/3)) * 0.5 + 0.5
    b = np.sin(2 * np.pi * (i / num_colors + 2/3)) * 0.5 + 0.5
    colors.append((r, g, b))

# Créer un graphique vide
fig, ax = plt.subplots()

# Tracer le cercle
for i, color in enumerate(colors):
    angle = 2 * np.pi * i / num_colors
    ax.plot([0, np.cos(angle)], [0, np.sin(angle)], color=color, linewidth=4)

# Paramètres de l'axe
ax.set_aspect('equal')
ax.axis('off')

# Afficher le cercle
plt.show()

